<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Assessment
      <small>Add Questions</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
      <li><a href="#">Questions</a></li>
      <li class="active"><a href="#">Add Questions</a></li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-xs-12">
        {{{ errorMsg }}}

        <div class="box box-info">
          <div class="box-header with-border">
            <h3 class="box-title">Add Questions ID : {{assessmentId}} </h3>
          </div>
          <!-- /.box-header -->
          <!-- form start -->
          <form class="form-horizontal" action="{{ site_url 'assessment/question/add' }}" method="post">
            <div class="input-div" >

            <div class="box-body">

                  <input type="hidden" name="question[][assessmentId]" hidden class="form-control" id="assessmentId" value="{{assessmentId}}">
                

              <div class="form-group">
                <label for="Nick" class="col-sm-2 control-label">Question</label>
                <div class="col-sm-10">
                  <input type="text" name="question[][question]" class="form-control" id="question" placeholder="Question">
                </div>
              </div>

              <div class="form-group">
                <label for="Nick" class="col-sm-2 control-label">Options</label>
              <div class="input-div-opt" >
                <div class="col-sm-10">
                  <input type="text" name="question[][option][][label]" class="form-control" id="option" placeholder="Option">
                </div>
              </div>
                
              </div>

              <div class="form-group">
                <label for="Nick" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                  <button id="addOption" type="button" class="btn btn-info">Add Option</button>
                  <button id="removeOption" type="button" class="btn btn-danger">Remove Option</button>
                </div>
              </div>

              <div class="form-group">
                <label for="Nick" class="col-sm-2 control-label">Question Answer</label>
                <div class="col-sm-10">
                  <input type="text" name="answer" class="form-control" id="question" placeholder="Question Answer">
                </div>
              </div>

              </div>
              

            </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
              <button type="button" onclick="javascript:history.go(-1);" class="btn btn-default">Cancel</button>
              <button id="removeQuestion" type="button" class="btn btn-danger ">Remove Question</button>
              <button type="submit" class="btn btn-success pull-right ">Submit</button>
              <button id="addQuestion" type="button" class="btn btn-info pull-right ">Add Another Question</button>
            </div>
            <!-- /.box-footer -->
            
          </form>
          {{!-- <div class="box-body">
            <div class="box-footer">
              <button type="submit" class="btn btn-info pull-right">Submit</button>
            </div>
          </div> --}}
        </div>
        <!-- /.box -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </section>
  <!-- /.content -->
</div>

<script>
  $('#addQuestion').click(function(){
    var newGroup = $('.input-div').last().html();
    $('.input-div').last().after(
      '<div class="input-div">'+newGroup+'</div>'
      );

});
 $('#addOption').click(function(){
    var newGroup = $('.input-div-opt').last().html();
    $('.input-div-opt').last().after(
      '<div class="input-div-opt">'+newGroup+'</div>'
      );

});

$('#removeQuestion').click(function(){
    $('.input-div').last().remove();
});

$('#removeOption').click(function(){
    $('.input-div-opt').last().remove();
});
</script>