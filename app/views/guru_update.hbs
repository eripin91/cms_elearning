  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Guru
        <small>Update Guru</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Guru</a></li>
        <li class="active"><a href="#">Update Update</a></li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
            {{{ errorMsg }}}
            
           <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">Update Guru</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form class="form-horizontal" action="{{ site_url 'guru/update' }}" method="post">
            <input type="hidden" name="guruId" value="{{ data.guruid }}">
            <input type="hidden" name="profile_picture" value="{{ data.profile_picture }}">
            <input type="hidden" name="profile_picture_medium" value="{{ data.profile_picture_medium }}">
            <input type="hidden" name="profile_picture_thumb" value="{{ data.profile_picture_medium }}">
              <div class="box-body">
               

                <div class="form-group">
                  <label for="fullname" class="col-sm-2 control-label">Full Name</label>

                  <div class="col-sm-10">
                    <input type="text" name="fullname" class="form-control" id="fullname" placeholder="Full Name" value="{{ data.fullname }}">
                  </div>
                </div>

                <div class="form-group">
                  <label for="Description" class="col-sm-2 control-label">Description</label>

                  <div class="col-sm-10">
                    <textarea rows="4" class="form-control" id="description" name="description">{{ data.description }}</textarea>
                  </div>
                </div>

                <div class="form-group">
                  <label for="Photo" class="col-sm-2 control-label">Photo</label>
                  <div class="col-sm-10"><input id="uploadPhoto" url-upload="/v1/upload/photo" type="file" name="file" accept="image/*" />
                  <div id="loading"><img style="width: 70px;display: none" src="{{ themes_url 'img/preloader.gif' }}"></div>
                  <img id="imageUpload" style="width: 200px" src="{{ data.profile_picture }}" />
                  </div>
                </div>

              </div>
              <!-- /.box-body -->
              <div class="box-footer">
                <button type="button" onclick="javascript:history.go(-1);" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-info pull-right">Submit</button>
              </div>
              <!-- /.box-footer -->
            </form>
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
</div>