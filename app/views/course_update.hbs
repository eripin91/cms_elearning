<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <small>Update Course</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Course</a></li>
            <li class="active"><a href="#">Update Course</a></li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                {{{ errorMsg }}}

                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Update Course</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form class="form-horizontal" action="{{ site_url 'courses/update' }}" method="post">
                        <input type="hidden" name="courseid" value="{{ data.courseid }}">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="classId" class="col-sm-2 control-label">Class Id</label>

                                <div class="col-sm-10">
                                    <input type="number" name="classid" class="form-control" id="classId"
                                        placeholder="Class Id" value="{{ data.classid }}">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Name" class="col-sm-2 control-label">Name</label>

                                <div class="col-sm-10">
                                    <input type="text" name="name" class="form-control" id="Name" placeholder="Name"
                                        value="{{ data.name }}">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="PreAssessmentId" class="col-sm-2 control-label">Pre Assessment Id</label>

                                <div class="col-sm-10">
                                    <select name="preassessmentid" class="form-control">
                                      {{{ selectDataPre }}}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="FinalAssessmentId" class="col-sm-2 control-label">Final Assessment
                                    Id</label>

                                <div class="col-sm-10">
                                    <select name="finalassessmentid" class="form-control">
                                      {{{ selectDataFinal }}}
                                    </select>
                                </div>
                            </div>

                            {{!--Status --}}
                            <div class="form-group">
                                <label for="Status" class="col-sm-2 control-label">Status</label>

                                <div class="col-sm-10">
                                    <div class="checkbox">
                                        {{{ getStatus data.status 2 }}}
                                    </div>
                                </div>
                            </div>

                        </div>
                        <!-- /.box-body -->
                        <div class=" box-footer">
                            <button type="button" onclick="javascript:history.go(-1);"
                                class="btn btn-default">Cancel</button>
                            <button type="submit" class="btn btn-info pull-right">Submit</button>
                        </div>
                        <!-- /.box-footer -->
                    </form>
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>